{
  "manifest_version": 2,
  "name": "Marksman",
  "version": "1.0",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon":"logo.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "https://api.securitytrails.com/*"
  ],
  "web_accessible_resources": [
    "popup.css"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}